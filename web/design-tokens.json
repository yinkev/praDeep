  "animation": {
    "duration": {
      "fastest": "150ms",
      "fast": "200ms",
      "base": "250ms",
      "slow": "300ms",
      "slower": "500ms"
    },
    "easing": {
      "outExpo": "cubic-bezier(0.16, 1, 0.3, 1)",
      "inExpo": "cubic-bezier(0.7, 0, 0.84, 0)",
      "inOutExpo": "cubic-bezier(0.87, 0, 0.13, 1)",
      "spring": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    },
    "keyframes": {
      "fadeIn": {
        "from": { "opacity": "0" },
        "to": { "opacity": "1" }
      },
      "slideUp": {
        "from": { "opacity": "0", "transform": "translateY(16px)" },
        "to": { "opacity": "1", "transform": "translateY(0)" }
      },
      "slideDown": {
        "from": { "opacity": "0", "transform": "translateY(-16px)" },
        "to": { "opacity": "1", "transform": "translateY(0)" }
      },
      "slideInLeft": {
        "from": { "opacity": "0", "transform": "translateX(-16px)" },
        "to": { "opacity": "1", "transform": "translateX(0)" }
      },
      "slideInRight": {
        "from": { "opacity": "0", "transform": "translateX(16px)" },
        "to": { "opacity": "1", "transform": "translateX(0)" }
      },
      "scaleIn": {
        "from": { "opacity": "0", "transform": "scale(0.95)" },
        "to": { "opacity": "1", "transform": "scale(1)" }
      },
      "scaleOut": {
        "from": { "opacity": "1", "transform": "scale(1)" },
        "to": { "opacity": "0", "transform": "scale(0.95)" }
      },
      "glowPulse": {
        "0%": {
          "opacity": "1",
          "boxShadow": "0 0 8px hsl(217deg 91% 60% / 0.5), 0 0 16px hsl(217deg 91% 60% / 0.3)"
        },
        "50%": {
          "opacity": "0.7",
          "boxShadow": "0 0 12px hsl(217deg 91% 60% / 0.7), 0 0 24px hsl(217deg 91% 60% / 0.4)"
        },
        "100%": {
          "opacity": "1",
          "boxShadow": "0 0 8px hsl(217deg 91% 60% / 0.5), 0 0 16px hsl(217deg 91% 60% / 0.3)"
        }
      },
      "surfacePulse": {
        "0%": { "opacity": "0.65" },
        "50%": { "opacity": "1" },
        "100%": { "opacity": "0.65" }
      },
      "spinOnce": {
        "from": { "transform": "rotate(0deg)" },
        "to": { "transform": "rotate(360deg)" }
      },
      "borderGlow": {
        "0%": { "borderColor": "hsl(var(--border))" },
        "50%": { "borderColor": "hsl(217deg 91% 60% / 0.5)" },
        "100%": { "borderColor": "hsl(var(--border))" }
      },
      "bounceSubtle": {
        "0%": { "transform": "translateY(0)" },
        "50%": { "transform": "translateY(-4px)" },
        "100%": { "transform": "translateY(0)" }
      },
      "wiggle": {
        "0%": { "transform": "rotate(0deg)" },
        "25%": { "transform": "rotate(-2deg)" },
        "75%": { "transform": "rotate(2deg)" },
        "100%": { "transform": "rotate(0deg)" }
      },
      "progress": {
        "0%": { "transform": "translateX(-100%)" },
        "100%": { "transform": "translateX(400%)" }
      },
      "shimmer": {
        "0%": { "backgroundPosition": "200% 0" },
        "100%": { "backgroundPosition": "-200% 0" }
      },
      "shake": {
        "0%": { "transform": "translateX(0)" },
        "20%": { "transform": "translateX(-3px)" },
        "40%": { "transform": "translateX(3px)" },
        "60%": { "transform": "translateX(-2px)" },
        "80%": { "transform": "translateX(2px)" },
        "100%": { "transform": "translateX(0)" }
      },
      "pop": {
        "0%": { "transform": "scale(0.94)" },
        "60%": { "transform": "scale(1.06)" },
        "100%": { "transform": "scale(1)" }
      },
      "typeRise": {
        "0%": { "opacity": "0", "transform": "translateY(10px)" },
        "100%": { "opacity": "1", "transform": "translateY(0)" }
      }
    },
    "preset": {
      "fadeIn": "fade-in 0.4s cubic-bezier(0.16, 1, 0.3, 1)",
      "slideUp": "slide-up 0.5s cubic-bezier(0.16, 1, 0.3, 1)",
      "scaleIn": "scale-in 0.3s cubic-bezier(0.34, 1.56, 0.64, 1)",
      "glowPulse": "glow-pulse 2s ease-in-out infinite",
      "shimmer": "shimmer 1.25s cubic-bezier(0.16, 1, 0.3, 1) infinite",
      "shake": "shake 0.34s cubic-bezier(0.36, 0.07, 0.19, 0.97) both",
      "pop": "pop 0.28s cubic-bezier(0.34, 1.56, 0.64, 1) both"
    }
  },
  "effects": {
    "glassCard": {
      "background": "rgba(255, 255, 255, 0.70)",
      "backdropFilter": "blur(10px)",
      "border": "1px solid rgba(0, 0, 0, 0.05)",
      "borderRadius": "12px"
    },
    "hoverGlow": {
      "boxShadow": "0 0 0 1px hsl(217deg 91% 60% / 0.1), 0 0 20px hsl(217deg 91% 60% / 0.08), 0 8px 32px hsl(217deg 91% 60% / 0.06)",
      "transition": "box-shadow 200ms cubic-bezier(0.16, 1, 0.3, 1)"
    },
    "hoverLift": {
      "transform": "translateY(-2px)",
      "transition": "transform 200ms cubic-bezier(0.16, 1, 0.3, 1), box-shadow 200ms cubic-bezier(0.16, 1, 0.3, 1)"
    },
    "hoverScale": {
      "transform": "scale(1.02)",
      "transition": "transform 150ms cubic-bezier(0.34, 1.56, 0.64, 1)"
    },
    "activPress": {
      "transform": "scale(0.98)",
      "transition": "transform 100ms cubic-bezier(0.16, 1, 0.3, 1)"
    }
  },
  "dotGrid": {
    "color": "rgba(0, 0, 0, 0.06)",
    "colorStrong": "rgba(0, 0, 0, 0.12)",
    "size": "1px",
    "spacing": "24px",
    "darkMode": {
